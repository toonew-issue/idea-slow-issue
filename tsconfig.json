{
  "compilerOptions": {
    "module": "commonjs",

    "outDir": "dist",
    "noLib": false,
    "lib": ["ESNext"],
    "target": "ES2020",
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "allowJs": false,
    "esModuleInterop": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  }
}
